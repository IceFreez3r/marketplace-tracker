{
    "manifest_version": 2,
    "name": "Idlescape Marketplace Tracker",
    "version": "1.0",
    "description": "Automatically tracks prices of items on the Idlescape Marketplace",
    "content_scripts": [
        {
            "matches": [
                "https://idlescape.com/game"
            ],
            "js": [
                "marketplace_tracker.js",
                "storage.js",
                "offline_tracker.js",
                "crafting_tracker.js",
                "enchanting_tracker.js",
                "farming_tracker.js",
                "smithing_tracker.js",
                "utility.js",
                "external/DOMpurify.min.js"
            ],
            "css": [
                "css/crafting_info.css",
                "css/enchanting_info.css",
                "css/farming_info.css",
                "css/marketplace_info.css",
                "css/offline_info.css",
                "css/smithing_info.css"
            ]
        }
    ],
    "permissions": [
        "storage"
    ]
}
