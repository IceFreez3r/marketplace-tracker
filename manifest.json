{
    "manifest_version": 2,
    "name": "Idlescape Marketplace Tracker",
    "version": "1.0",
    "description": "Automatically tracks prices of items on the Idlescape Marketplace",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://idlescape.com/game"
            ],
            "js": [
                "marketplace_tracker.js",
                "offline_tracker.js",
                "crafting_tracker.js",
                "enchanting_tracker.js",
                "smithing_tracker.js",
                "utility.js"
            ],
            "css": [
                "css/custom_classes.css"
            ]
        }
    ],
    "permissions": [
        "storage"
    ], 
    "browser_action": {
        "default_icon": "icons/stonks.png",
        "default_popup": "popup/view.html"
    }
}
