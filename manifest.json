{
    "manifest_version": 2,
    "name": "Idlescape Marketplace Tracker",
    "version": "2.0.0",
    "description": "Automatically tracks prices of items on the Idlescape Marketplace",
    "content_scripts": [
        {
            "matches": [
                "https://dev.idlescape.com/game",
                "https://www.dev.idlescape.com/game"
            ],
            "js": [
                "storage.js",
                "templates.js",
                "utility.js",
                "external/DOMpurify.min.js",
                "modules/crafting.js",
                "modules/enchanting.js",
                "modules/farming.js",
                "modules/highlight.js",
                "modules/marketplace.js",
                "modules/offline.js",
                "modules/smithing.js",
                "modules/alert.js",
                "tracker.js",
                "main.js"
            ]
        }
    ]
}
